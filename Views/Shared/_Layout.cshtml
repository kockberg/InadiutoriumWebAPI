<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="jumbotron text-center">
        <div class="container">
            <h2 class="jumbotron-heading">
                @Html.DisplayName("InadiutoriumWebAPI")
            </h2>
            <p class="lead">This is a demo site to search for all celebration mondays between two dates.</p>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Antti Kopperi</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/helpers.js")
    @RenderSection("scripts", required: false)
</body>
</html>
